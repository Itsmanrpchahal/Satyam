<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mandy.satyam.myOrderList.GetOrderDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:padding="@dimen/margin_dp5"
                        android:src="@drawable/ic_back"></ImageButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Order Details"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/textsize_sp16"
                        android:textStyle="bold"
                        android:textColor="@color/white"></TextView>
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/margin_dp5"
                app:cardCornerRadius="@dimen/margin_dp10"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="@dimen/defaultmargin"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_marginRight="@dimen/defaultmargin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/orderImage"
                        android:layout_width="@dimen/margin_dp140"
                        android:layout_height="@dimen/margin_dp140"
                        android:layout_margin="@dimen/margin_dp8"
                        android:src="@drawable/ic_satyamplaceholder"></com.makeramen.roundedimageview.RoundedImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_dp8"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/orderid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Order"
                            android:textSize="@dimen/textsize_sp16"></TextView>

                        <TextView
                            android:id="@+id/paymentmethod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_dp3"
                            android:text="Payment via direct bank transfer."
                            android:maxLines="2"></TextView>

                        <Button
                            android:id="@+id/statusbt"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_dp35"
                            android:background="@color/green"
                            android:text="delievr"
                            android:layout_marginTop="@dimen/margin_dp15"
                            android:textColor="@color/white"
                            android:textAllCaps="false"></Button>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/cardview"
                android:layout_marginTop="@dimen/margin_dp40"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_marginRight="@dimen/defaultmargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_sp16"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/defaultmargin"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"></TextView>

                        <TextView
                            android:id="@+id/phone"
                            android:layout_marginTop="@dimen/margin_dp8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"></TextView>

                        <TextView
                            android:id="@+id/gender"
                            android:layout_marginTop="@dimen/margin_dp8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/defaultmargin"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/defaultmargin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Billing Address"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/textsize_sp16"></TextView>


                        <TextView
                            android:id="@+id/BName"
                            android:layout_marginTop="@dimen/defaultmargin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Billing Name"></TextView>

                        <TextView
                            android:id="@+id/BCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Billing Company"></TextView>

                        <TextView
                            android:id="@+id/CAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Billing CAddress"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/defaultmargin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shiping Address"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/textsize_sp16"></TextView>

                        <TextView
                            android:id="@+id/SName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/defaultmargin"
                            android:gravity="center_horizontal"
                            android:text="Billing Name"></TextView>

                        <TextView
                            android:id="@+id/SCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Billing Company"></TextView>

                        <TextView
                            android:id="@+id/SAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Billing CAddress"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
