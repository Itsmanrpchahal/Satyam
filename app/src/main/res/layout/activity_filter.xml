<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mandy.satyam.filterScreen.FilterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/filter_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"></ImageButton>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Filters"
                android:textColor="@color/white"
                android:textSize="18sp"></TextView>

            <Button
                android:id="@+id/resetFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_alignParentRight="true"
                android:text="Reset"
                android:textColor="@color/white"
                android:textAllCaps="false"></Button>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:visibility="gone"
                android:id="@+id/categories_recyler"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/brand_tab"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="Brand"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>


            <TextView
                android:id="@+id/size_tab"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:visibility="visible"
                android:text="Size"
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>

            <TextView
                android:id="@+id/colors_tab"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:visibility="visible"
                android:text="Colors"
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>

            <TextView
                android:id="@+id/price_tab"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:paddingLeft="5sp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="22sp"></TextView>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_recylcer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:id="@+id/apllyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/defaultmargin"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/white"></Button>
</RelativeLayout>
