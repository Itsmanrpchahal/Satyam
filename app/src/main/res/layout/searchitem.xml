<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recycler">

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="@dimen/margin_dp30"
        android:layout_height="@dimen/margin_dp30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:src="@drawable/ic_satyamplaceholder"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_dp10"
            android:text=""
            android:layout_marginLeft="@dimen/margin_dp10"
            android:textColor="@color/black"
            android:id="@+id/searchitemname">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_dp10"
            android:text=""
            android:layout_marginLeft="@dimen/margin_dp10"
            android:textColor="@color/com_facebook_blue"
            android:id="@+id/searchitemcategory">
        </TextView>

    </LinearLayout>

</LinearLayout>