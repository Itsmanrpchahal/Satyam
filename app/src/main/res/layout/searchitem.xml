<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recycler">

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="@dimen/margin_dp30"
        android:layout_height="@dimen/margin_dp30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:src="@drawable/ic_satyamplaceholder"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_dp10"
        android:text=""
        android:layout_marginLeft="@dimen/margin_dp10"
        android:textColor="@color/black"
        android:id="@+id/searchitemname">
    </TextView>

</LinearLayout>