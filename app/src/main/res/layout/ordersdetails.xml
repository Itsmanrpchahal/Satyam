<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_dp5"
        app:cardCornerRadius="@dimen/margin_dp10"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/defaultmargin"
        android:layout_marginLeft="@dimen/defaultmargin"
        android:layout_marginRight="@dimen/defaultmargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/orderImage"
                android:layout_width="@dimen/margin_dp140"
                android:layout_height="@dimen/margin_dp140"
                android:layout_margin="@dimen/margin_dp8"
                android:src="@drawable/ic_satyamplaceholder"></com.makeramen.roundedimageview.RoundedImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_dp8"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Order"
                    android:textSize="@dimen/textsize_sp16"></TextView>

                <TextView
                    android:id="@+id/paymentmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_dp3"
                    android:text="Payment via direct bank transfer."
                    android:maxLines="2"></TextView>

                <Button
                    android:id="@+id/statusbt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_dp35"
                    android:background="@color/green"
                    android:text="delievr"
                    android:layout_marginTop="@dimen/margin_dp15"
                    android:textColor="@color/white"
                    android:textAllCaps="false"></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>