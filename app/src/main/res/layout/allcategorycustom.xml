<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="3dp"
        app:cardElevation="@dimen/margin_dp5"
        app:cardCornerRadius="@dimen/margin_dp2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/allcategoryImage"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_dp15"
                android:layout_height="@dimen/margin_dp100"
                android:src="@drawable/ic_satyamplaceholder"></ImageView>

            <TextView
                android:id="@+id/ProductNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Product Name"
                android:singleLine="true"
                android:textSize="@dimen/margin_dp12"
                android:gravity="center_horizontal"></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>