<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_image"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:id="@+id/logo"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_text"
        android:textSize="@dimen/margin_dp35"
        android:text="Text"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_text1"
        android:textSize="@dimen/margin_dp15"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_dp15"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="@dimen/margin_dp5"
        app:layout_constraintTop_toBottomOf="@id/slide_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>