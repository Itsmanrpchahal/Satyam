<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slide_image"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="@dimen/margin_dp250"
        android:layout_height="@dimen/margin_dp250"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/margin_dp35" android:shadowColor="#A90A0A0A"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text=""
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.20"
        android:id="@+id/logo"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_text"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal"
        android:text=""
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slide_text1"
        android:textSize="@dimen/margin_dp15"
        android:gravity="center_horizontal"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_dp22"
        android:layout_marginLeft="20dp"
        android:text=""
        android:layout_marginRight="@dimen/margin_dp20"
        android:lineSpacingExtra="@dimen/margin_dp5"
        app:layout_constraintTop_toBottomOf="@id/slide_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>